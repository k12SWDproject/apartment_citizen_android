                <!--                    android:text="Day of recipt"-->
                <!--                    android:textColor="#ffff"-->
                <!--                    android:textSize="20dp"-->

                <!--                    android:textStyle="italic" />-->
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffff"
                    android:orientation="vertical"
                    android:padding="20dp">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            style="@style/styleForTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Mã hóa đơn: "
                            android:textSize="20dp"

                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtIdReceiptPayed"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:text="XBV5000"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/styleForTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Ngày hóa đơn: "
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtDateOfReceiptPayed"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:text="Ngày hóa dơn"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/styleForTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Chủ hộ: "
                            android:textSize="20dp"

                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtFullnamePayed"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:text="Test gì đó"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/styleForTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Căn hộ số: "
                            android:textSize="20dp"

                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtUserInfoPayed"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:text="Số căn hộ"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtNameOfQuantityPayed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="SỐ ĐIỆN NĂNG TIÊU THỤ"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        >

                        <!--            <TextView-->
                        <!--                style="@style/styleForTextView"-->
                        <!--                android:layout_width="wrap_content"-->
                        <!--                android:layout_height="wrap_content"-->
                        <!--                android:layout_gravity="center_vertical"-->
                        <!--                android:layout_marginLeft="50dp"-->
                        <!--                android:drawableTop="@drawable/idea" />-->

                        <TextView
                            android:id="@+id/txtQuantityPayed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="50"
                            android:textSize="50dp"
                            android:textStyle="bold" />

                        <!--            <TextView-->
                        <!--                android:id="@+id/typeOfUsed"-->
                        <!--                android:layout_width="wrap_content"-->
                        <!--                android:layout_height="wrap_content"-->
                        <!--                android:layout_gravity="center_vertical"-->
                        <!--                android:layout_marginLeft="2dp"-->
                        <!--                android:gravity="right"-->
                        <!--                android:text="KWh"-->

                        <!--                android:textSize="20dp"-->
                        <!--                android:textStyle="bold" />-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/styleForTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Tổng tiền: "
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/txtMoneyOfReceiptPayed"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_marginLeft="80dp"
                            android:text="1000"
                            android:textSize="25dp"

                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:gravity="right"
                            android:text="VNĐ"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Đã bao gồm thuế VAT 10%"
                        android:textColor="#ff0000"
                        android:textSize="15dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <!--Thanh toán image button-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/round_bg_dathanhtoan"
        android:onClick="clickToPay"
        android:text="Đã thanh toán"
        android:clickable="false"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="20dp"/>
</LinearLayout>