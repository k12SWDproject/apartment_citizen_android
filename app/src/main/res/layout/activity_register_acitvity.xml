<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterAcitvity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/boy"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLogo"
        android:text="Apartment Citizen"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/imageView"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Account"
        android:id="@+id/titlRegis"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textViewLogo"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="#254699"
        />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ và tên "
            android:layout_below="@id/titlRegis"
            android:layout_margin="10dp"
            android:id="@+id/txtFullname"
            />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số điện thoại "
        android:layout_below="@id/txtFullname"
        android:layout_margin="10dp"
        android:id="@+id/txtNumberPhone"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sinh Nhật "
        android:layout_below="@id/txtNumberPhone"
        android:layout_margin="10dp"
        android:id="@+id/txtBirthdate"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_below="@id/txtBirthdate"
        android:layout_margin="10dp"
        android:id="@+id/txtEmail"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEmail"
        android:background="@drawable/round_bg"
        android:text="Đăng ký"
        android:textColor="#FFF"
        android:layout_gravity="center"

        />
    </LinearLayout>
</LinearLayout>













</RelativeLayout>