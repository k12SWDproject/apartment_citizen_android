<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#e1e1ea"
    android:layout_height="match_parent">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_height="match_parent"
        android:elevation="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="match_parent">
<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="hello"-->
<!--                android:id="@+id/txtInfo"-->
<!--                android:background="@drawable/wallpaper"-->
<!--                />-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="#ffff"
                app:cardCornerRadius="5dp"
                android:textAlignment="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Số dư trong tài khoản"
                    android:layout_marginLeft="10dp"
                    android:textColor="#020202"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtMoneyOfUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="100.000.000"
                    />



                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanh Toán"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="8"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">


                <Button
                    android:background="@drawable/round_bg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="3.5"
                    android:drawableTop="@drawable/idea"
                    android:padding="2dp"

                    android:onClick="clickToElectric"
                    android:text="Điện" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="3.5"
                    android:background="@drawable/round_bg2"
                    android:drawableTop="@drawable/drop"
                    android:padding="2dp"

                    android:onClick="clickToWater"
                    android:text="Nước" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="8"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="3.5"
                    android:background="@drawable/round_bg2"
                    android:padding="2dp"

                    android:drawableTop="@drawable/wifi"
                    android:onClick="clickToWifi"
                    android:text="Wifi" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="3.5"
                    android:background="@drawable/round_bg2"

                    android:drawableTop="@drawable/ic_late_fee"
                    android:onClick="clickToPhiChungCu"
                    android:text="Phí chung cư" />


            </LinearLayout>








            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dịch vụ"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"

                android:orientation="horizontal"
                android:weightSum="8"

                android:layout_height="wrap_content">

                <Button
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/round_bg2"
                    android:drawableTop="@drawable/ic_best_seller"

                    android:onClick="clickToService"
                    android:padding="10dp"

                    android:text="Dịch vụ" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>