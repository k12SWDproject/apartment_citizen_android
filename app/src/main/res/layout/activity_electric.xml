<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ElectricActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hóa Đơn Tiền Điện"
        android:gravity="center"
        android:textSize="30dp"

        android:textStyle="bold"
        android:id="@+id/txtInfo"
        android:background="@drawable/images"
        android:layout_marginBottom="10dp"
        />
           <LinearLayout
               android:layout_margin="5dp"
               android:layout_width="wrap_content"
               android:orientation="vertical"
               android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hóa đơn tiền điện phải thanh toán"

        android:textSize="20dp"
        android:textStyle="bold"

        />
               <LinearLayout
                   android:background="#000"
                   android:layout_width="match_parent"
                   android:layout_margin="5dp"
                   android:layout_height="1dp"/>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvDienChuaThanhToan"

        />
           </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hóa đơn tiền điện đã thanh toán"
        android:textSize="20dp"
        android:textStyle="bold"

        />
            <LinearLayout
                android:background="#000"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="1dp"/>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvDienDaThanhToan"

        />
        </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>