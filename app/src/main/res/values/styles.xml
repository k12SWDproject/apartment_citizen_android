<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>



    </style>
    <style name="styleForEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">#000000</item>
        <item name="android:enabled">false</item>
        <item name="android:textColorHint">#000000</item>







    </style>
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#0356FF</item>
        <item name="android:textColor">#FFFF</item>
    </style>
    <style name="AppTheme.Button2" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#FFEB3B</item>
        <item name="android:textColor">#FFFF</item>
    </style>
    <style name="styleForTextView" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">#000000</item>
        <item name="android:enabled">true</item>
        <item name="android:textSize">10dp</item>




    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



</resources>
